<div class="login-container">
  <div class="login-box">
    <img class="logo" src="/assets/logo.png" alt="Logo" onerror="this.style.display='none'" />
    <h2 class="login-title">Iniciar sesión</h2>

    <form class="login-form" {{on "submit" this.handleSubmit}}>
      <div class="form-group">
        <label for="email">Correo</label>
        <input id="email" type="email" value={{this.email}} {{on "input" this.updateEmail}} placeholder="tu@correo.com" required />
      </div>

      <div class="form-group">
        <label for="password">Contraseña</label>
        <input id="password" type="password" value={{this.password}} {{on "input" this.updatePassword}} placeholder="Contraseña" required />
      </div>

      <button class="btn-login" type="submit">Ingresar</button>
    </form>

    {{#if this.errorMessage}}
      <div class="login-error">{{this.errorMessage}}</div>
    {{/if}}

    <div class="signup-text">
      ¿No tienes cuenta? <a href="#">Regístrate</a>
    </div>
  </div>
</div>
